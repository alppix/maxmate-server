{
  "name": "maxmate-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "apollo:service:push": "apollo service:push --key=$APOLLO_ENGINE_API_KEY --endpoint=$APOLLO_ENDPOINT",
    "apollo:service:push:delay": "run-s delay apollo:service:push",
    "build": "webpack --config webpack.$NODE_ENV.js",
    "delay": "delay ${NPM_SCRIPTS_DELAY_SECONDS:-0}",
    "lint": "tslint --project tsconfig.json",
    "semantic-release": "semantic-release",
    "start": "run-p start:server apollo:service:push:delay",
    "start:env": "run-p start:server:env apollo:service:push:delay",
    "start:server": "node ./dist/server",
    "start:server:env": "node --require dotenv/config ./dist/server",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alppix/maxmate-server.git"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "release: cut the ${nextRelease.version} release [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "tagFormat": "${version}"
  },
  "dependencies": {
    "apollo": "^2.1.8",
    "apollo-server": "^2.3.1",
    "clean-webpack-plugin": "^1.0.0",
    "delay-cli": "^1.1.0",
    "graphql": "^14.0.2",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^5.3.2",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.6",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.18",
    "@types/webpack-env": "^1.13.6",
    "apollo-server-testing": "^2.3.1",
    "dotenv": "^6.2.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "semantic-release": "^15.13.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
